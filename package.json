{
  "name": "home-budget",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "lint": "ng lint",
    "deploy:local": "ng build && firebase deploy --only hosting",
    "lint-staged": "lint-staged",
    "analyze-circular": "npx depcruise --config .dependency-cruiser.js src",
    "analyze-fsd": "steiger ./src",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,css,scss,html,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.3",
    "@angular/common": "^19.1.3",
    "@angular/compiler": "^19.1.3",
    "@angular/core": "^19.1.3",
    "@angular/fire": "^19.0.0",
    "@angular/forms": "^19.1.3",
    "@angular/platform-browser": "^19.1.3",
    "@angular/platform-browser-dynamic": "^19.1.3",
    "@angular/router": "^19.1.3",
    "@taiga-ui/cdk": "^4.13.0",
    "@taiga-ui/core": "^4.13.0",
    "@taiga-ui/event-plugins": "^4.0.2",
    "@taiga-ui/icons": "^4.13.0",
    "@taiga-ui/kit": "^4.13.0",
    "@taiga-ui/legacy": "^4.16.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.5",
    "@angular/cli": "^19.1.5",
    "@angular/compiler-cli": "^19.1.3",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "18.4.1",
    "autoprefixer": "^10.4.20",
    "dependency-cruiser": "^16.6.0",
    "eslint": "^9.15.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.6",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.10",
    "madge": "^8.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "steiger": "^0.5.2",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.5.2",
    "typescript-eslint": "8.15.0"
  }
}
